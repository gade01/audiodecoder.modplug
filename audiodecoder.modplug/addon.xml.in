<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audiodecoder.modplug"
  version="2.0.1"
  name="Modplug Audio Decoder"
  provider-name="spiff">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="kodi.audiodecoder"
    name="mod"
    extension=".669|.abc|.amf|.ams|.dbm|.dmf|.dsm|.far|.it|.j2b|.mdl|.med|.mod|.itgz|.mt2|.mtm|.okt|.pat|.psm|.ptm|.s3m|.stm|.ult|.umx|.xm|.mdgz|.s3gz|.xmgz"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Modplug Audio Decoder</summary>
    <description lang="en">Plays MOD files and few other formats.

It is recommended to use "OpenMPT Audio Decoder" addon instead of this one.</description>
    <platform>@PLATFORM@</platform>
  </extension>
</addon>
